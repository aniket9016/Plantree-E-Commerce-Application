<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F2F4"
    android:orientation="vertical"
    android:paddingBottom="15dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="70dp"
       android:background="#107B15">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="10dp"
           android:gravity="center"
           android:text="You Are not Member of Plantree\nPlease Login Or Register Yourself"
           android:textColor="#F2F3F2"
           android:textSize="18sp"
           android:textStyle="bold">

       </TextView>
   </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/gotoregister"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/register_password_input"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:background="@drawable/btndrawable"
            android:padding="20dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/gotologin"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_below="@id/register_password_input"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/btndrawable"
            android:padding="20dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/btndrawable"
        android:padding="20dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>